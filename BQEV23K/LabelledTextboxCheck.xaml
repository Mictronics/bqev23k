<UserControl x:Class="BQEV23K.LabelledTextboxCheck"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BQEV23K"
             mc:Ignorable="d">
    <Grid x:Name="Root" Margin="3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" SharedSizeGroup="Labels"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="{Binding Label}" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Text="{Binding Text}" Margin="3,0"/>
        <TextBlock Grid.Column="2" Text="{Binding Unit}"/>
    </Grid>
</UserControl>
